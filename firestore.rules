rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isArtisan() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'artisan';
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (for browsing artisans)
      allow read: if true;
      
      // Users can create their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile
      allow update: if isOwner(userId);
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Products collection
    match /products/{productId} {
      // Anyone can read products (public catalog)
      allow read: if true;
      
      // Authenticated users can create products
      allow create: if isAuthenticated();
      
      // Product owner or admin can update
      allow update: if isAuthenticated() && (
        resource.data.artisanId == request.auth.uid || 
        isAdmin()
      );
      
      // Product owner or admin can delete
      allow delete: if isAuthenticated() && (
        resource.data.artisanId == request.auth.uid || 
        isAdmin()
      );
    }
    
    // Carts collection
    match /carts/{cartId} {
      // Users can only read their own cart
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can create their own cart
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own cart
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can delete their own cart
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Users can read their own orders, artisans can read orders containing their products
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        request.auth.uid in resource.data.items[0].artisanId ||
        isAdmin()
      );
      
      // Authenticated users can create orders
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Order owner, artisan, or admin can update
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      
      // Only admins can delete orders
      allow delete: if isAdmin();
    }
    
    // Wishlists collection
    match /wishlists/{wishlistId} {
      // Users can only read their own wishlist
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can create their own wishlist
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own wishlist
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Users can delete their own wishlist
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Loan Applications collection
    match /loan_applications/{applicationId} {
      // Users can read their own applications, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      
      // Authenticated users can create applications
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Application owner or admin can update
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      
      // Only admins can delete applications
      allow delete: if isAdmin();
    }
    
    // Sales Events collection - Enhanced for real-time tracking
    match /sales_events/{eventId} {
      // Artisans can read their own sales events, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.artisanId == request.auth.uid ||
        isAdmin()
      );
      
      // Only server/admin can write (use Firebase Admin SDK for server writes)
      allow write: if false;
    }
    
    // Sales Aggregates collection - Enhanced for real-time analytics
    match /sales_aggregates/{aggregateId} {
      // Artisans can read their own aggregates, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.artisanId == request.auth.uid ||
        isAdmin()
      );
      
      // Only server/admin can write (use Firebase Admin SDK for server writes)
      allow write: if false;
    }
    
    // Product Performance collection - Enhanced for real-time insights
    match /product_performance/{performanceId} {
      // Artisans can read their own product performance, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.artisanId == request.auth.uid ||
        isAdmin()
      );
      
      // Only server/admin can write
      allow write: if false;
    }
    
    // Expenses collection - New for expense tracking
    match /expenses/{expenseId} {
      // Artisans can read their own expenses, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.artisanId == request.auth.uid ||
        isAdmin()
      );
      
      // Artisans can create their own expenses
      allow create: if isAuthenticated() && 
        request.resource.data.artisanId == request.auth.uid;
      
      // Artisans can update their own expenses
      allow update: if isAuthenticated() && 
        resource.data.artisanId == request.auth.uid;
      
      // Artisans can delete their own expenses, admins can delete any
      allow delete: if isAuthenticated() && (
        resource.data.artisanId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // Dashboard Metrics collection - New for real-time dashboard data
    match /dashboard_metrics/{metricId} {
      // Artisans can read their own metrics, admins can read all
      allow read: if isAuthenticated() && (
        resource.data.artisanId == request.auth.uid ||
        isAdmin()
      );
      
      // Only server/admin can write (use Firebase Admin SDK for server writes)
      allow write: if false;
    }
    
    // Enhanced Chat Sessions collection - Existing but enhanced
    match /enhanced_chat_sessions/{sessionId} {
      // Participants can read their own sessions
      allow read: if isAuthenticated() && 
        request.auth.uid in resource.data.participants[].id;
      
      // Participants can create sessions
      allow create: if isAuthenticated() && 
        request.auth.uid in request.resource.data.participants[].id;
      
      // Participants can update sessions
      allow update: if isAuthenticated() && 
        request.auth.uid in resource.data.participants[].id;
      
      // Only admins can delete sessions
      allow delete: if isAdmin();
    }
  }
}
